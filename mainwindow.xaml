<Window x:Class="DashboardDesigner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:wpfx="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:DashboardDesigner"
        Loaded="Window_Loaded" Closed="Window_Closed" Title="SCATO" Height="800" Width="1200"
        Icon="scato.ico">
    
  <!--<FrameworkElement.Resources>-->
    <Window.Resources>
        <ContextMenu x:Key="DesignerCanvasContextMenu">
      <MenuItem Header="Paste" Command="{x:Static ApplicationCommands.Paste}">
        <MenuItem.Icon>
          <md:PackIcon Kind="ContentPaste" Width="16" Height="16"/>
        </MenuItem.Icon>
      </MenuItem>
        
      <MenuItem Header="Select All" Command="{x:Static local:DesignerCanvas.SelectAll}">
        <MenuItem.Icon>
          <md:PackIcon Kind="SelectAll" Width="16" Height="16"/>
        </MenuItem.Icon>
      </MenuItem>
        
      <Separator/>
      <MenuItem Header="Fullscreen" Command="{x:Static local:DesignerCanvas.Fullscreen}">
        <MenuItem.Icon>
          <md:PackIcon Kind="Fullscreen" Width="16" Height="16"/>
        </MenuItem.Icon>
      </MenuItem>
        
    </ContextMenu>
    <ContextMenu x:Key="RuntimeContextMenu">
      <MenuItem Click="menuFullscreen_Click" Header="Fullscreen">
        <MenuItem.Icon>
          <md:PackIcon Kind="Fullscreen" Width="16" Height="16"/>
        </MenuItem.Icon>
      </MenuItem>
    </ContextMenu>
        <CollectionViewSource x:Key="myFonts" Source="{Binding Source={x:Static Fonts.SystemFontFamilies}}"/>
    </Window.Resources>
            <!--</FrameworkElement.Resources>-->
  <Grid>
    <TabControl Name="tabMain" Margin="0">
      <TabItem Width="50">
        <HeaderedContentControl.Header>
          <StackPanel Orientation="Horizontal">
            <md:PackIcon Kind="Brush" Width="30" Height="50" Foreground="Gray"/>
          </StackPanel>
        </HeaderedContentControl.Header>
        <Grid Margin="0">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
          </Grid.RowDefinitions>
          <Grid Name="gridMenu" Row="0" Visibility="Collapsed">
            <Menu>
              <MenuItem Header="File">
                <MenuItem Header="New">
                  <MenuItem.Icon>
                    <md:PackIcon Kind="FileOutline"/>
                  </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Open">
                  <MenuItem.Icon>
                    <md:PackIcon Kind="FolderOpenOutline"/>
                  </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save">
                  <MenuItem.Icon>
                    <md:PackIcon Kind="ContentSaveOutline"/>
                  </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Print">
                  <MenuItem.Icon>
                    <md:PackIcon Kind="Printer"/>
                  </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Upload">
                  <MenuItem.Icon>
                    <md:PackIcon Kind="UploadOutline"/>
                  </MenuItem.Icon>
                </MenuItem>
              </MenuItem>
              <MenuItem Header="Edit">
                <MenuItem Header="Paste">
                  <MenuItem.Icon>
                    <md:PackIcon Kind="ContentPaste"/>
                  </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Cut">
                  <MenuItem.Icon>
                    <md:PackIcon Kind="ContentCut"/>
                  </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Copy">
                  <MenuItem.Icon>
                    <md:PackIcon Kind="ContentCopy"/>
                  </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Delete">
                  <MenuItem.Icon>
                    <md:PackIcon Kind="DeleteOutline"/>
                  </MenuItem.Icon>
                </MenuItem>
              </MenuItem>
              <MenuItem Header="View">
                <MenuItem Header="Toolbar">
                  <MenuItem.Icon>
                    <md:PackIcon Kind="RectangleOutline"/>
                  </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Toolbox">
                  <MenuItem.Icon>
                    <md:PackIcon Kind="ToolboxOutline"/>
                  </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Properties Window">
                  <MenuItem.Icon>
                    <md:PackIcon Kind="WrenchOutline"/>
                  </MenuItem.Icon>
                </MenuItem>
              </MenuItem>
              <MenuItem Header="Help">
                <MenuItem Header="About">
                  <MenuItem.Icon>
                    <md:PackIcon Kind="AboutOutline"/>
                  </MenuItem.Icon>
                </MenuItem>
              </MenuItem>
            </Menu>
          </Grid>
          <Grid Name="gridHeader" Row="1" Visibility="Visible">
            <ContentControl Name="toolbar" Content="{StaticResource MyToolbar}"/>
          </Grid>
          <Grid Name="gridMain" Row="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition x:Name="colToolbox" Width="280"/>
              <ColumnDefinition/>
              <ColumnDefinition x:Name="colProperty" Width="280"/>
            </Grid.ColumnDefinitions>
              
              <!--ToolboxGrid-->
            <Grid Name="gridTool" Column="0" Visibility="Visible">
              <GroupBox Header="Toolbox" Style="{DynamicResource MaterialDesignCardGroupBox}" md:ColorZoneAssist.Mode ="Dark">
                  <GroupBox.HeaderTemplate>
                      <DataTemplate>
                          <StackPanel Orientation="Horizontal">
                              <md:PackIcon Kind="Toolbox" Height="16" Width="16" VerticalAlignment="Center"/>
                              <TextBlock
                                Margin="12,0,0,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Text="{Binding}" />
                          </StackPanel>
                      </DataTemplate>
                  </GroupBox.HeaderTemplate>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                 <md:Card> 
                  <StackPanel Margin="0,0,3,0">
                    <Expander Header="Controls" Content="{StaticResource Controls}" IsExpanded="False"/>
                    <Border Style="{StaticResource MaterialDesignToolBarMainPanelBorderStyle}" />
                    <Expander Header="Shapes" Content="{StaticResource ShapeStencils}" IsExpanded="False"/>
                                            <Border Style="{StaticResource MaterialDesignToolBarMainPanelBorderStyle}" />
                                            <Expander Header="HMI Symbols" IsExpanded="false">
                      <StackPanel Margin="10 0 0 0">
                        <Expander Header="Elbows" Content="{StaticResource SymbolStencils_Elbows}" IsExpanded="false"/>
                        <Expander Header="Motors" Content="{StaticResource SymbolStencils_Motors}" IsExpanded="false"/>
                        <Expander Header="Pipes" Content="{StaticResource SymbolStencils_Pipes}" IsExpanded="false"/>
                        <Expander Header="Pumps" Content="{StaticResource SymbolStencils_Pumps}" IsExpanded="false"/>
                        <Expander Header="Tanks" Content="{StaticResource SymbolStencils_Tanks}" IsExpanded="false"/>
                        <Expander Header="Tees" Content="{StaticResource SymbolStencils_Tees}" IsExpanded="false"/>
                        <Expander Header="Valves" Content="{StaticResource SymbolStencils_Valves}" IsExpanded="false"/>
                      </StackPanel>
                    </Expander>
                    <Border Style="{StaticResource MaterialDesignToolBarMainPanelBorderStyle}" />
                  </StackPanel>
                 </md:Card>
                </ScrollViewer>
              </GroupBox>
            </Grid>
            <GridSplitter Focusable="false" Width="2" Background="LightGray" VerticalAlignment="Stretch"
                          HorizontalAlignment="Right"/>
            <Grid Name="gridCanvas" Column="1">
                            <GroupBox Header="Canvas" Margin="3,0,3,0" Style="{DynamicResource MaterialDesignCardGroupBox}" md:ColorZoneAssist.Mode ="Dark">
                                <GroupBox.HeaderTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <md:PackIcon Kind="Brush" Height="16" Width="16" VerticalAlignment="Center"/>
                                            <TextBlock
                                Margin="12,0,0,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Text="{Binding}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GroupBox.HeaderTemplate>
                                <ScrollViewer Name="scrolCanvas" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                              Margin="-4 -1">
                  <Grid>
                    <local:DesignerCanvas x:Name="MyDesigner" Focusable="true" Margin="0"
                        ContextMenu="{StaticResource DesignerCanvasContextMenu}" Background="White"
                        FocusVisualStyle="{x:Null}"/>
                    <Rectangle Name="rectRuntime" Fill="Transparent" Visibility="Collapsed"
                               ContextMenu="{StaticResource RuntimeContextMenu}"/>
                    <TextBlock Name="lblWMark" Text="SCATO - Simulations" HorizontalAlignment="Center"
                               VerticalAlignment="Top" FontSize="24" FontStyle="Italic" Foreground="#FFC1C1C1" FontFamily="Arial"
                               Visibility="Collapsed">
                      <TextBlock.TextDecorations>
                        <x:Null/>
                      </TextBlock.TextDecorations>
                      <UIElement.Effect>
                        <DropShadowEffect Color="White" ShadowDepth="3" BlurRadius="3" Opacity="0.5" Direction="290"/>
                      </UIElement.Effect>
                    </TextBlock>
                  </Grid>
                </ScrollViewer>
              </GroupBox>
            </Grid>
            <GridSplitter DragCompleted="GridSplitter_DragCompleted" Grid.Column="2" Focusable="false" Width="2"
                          Background="LightGray" VerticalAlignment="Stretch" HorizontalAlignment="Left"/>
            <Grid SizeChanged="gridProperty_SizeChanged" Name="gridProperty" Column="2">
                            <GroupBox Header="Property" Margin="2 0 0 0" Style="{DynamicResource MaterialDesignCardGroupBox}" md:ColorZoneAssist.Mode ="Dark">
                                <GroupBox.HeaderTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <md:PackIcon Kind="Gear" Height="16" Width="16" VerticalAlignment="Center"/>
                                            <TextBlock
                                Margin="12,0,0,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                Text="{Binding}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GroupBox.HeaderTemplate>
                                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto"
                              Foreground="DarkSlateGray">
                  <StackPanel Orientation="Vertical">
                    <Grid>
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition/>
                      </Grid.ColumnDefinitions>
                      <TextBlock Text="ID:" FontSize="10" VerticalAlignment="Center"/>
                      <ComboBox SelectionChanged="cboItems_SelectionChanged" Name="cboItems" FontSize="10" Grid.Column="1"
                                IsEnabled="false"/>
                    </Grid>
                    <TextBlock Name="txtType" Text="-" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    <TabControl>
                      <TabItem Header="Static">
                        <StackPanel Name="stkProp" Orientation="Vertical">
                          <Grid x:Name="grdPropLeft">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Left" VerticalAlignment="Center"/>
                            <TextBox Keyboard.KeyUp="txtLeft_KeyUp" LostFocus="txtLeft_LostFocus"
                                     PreviewTextInput="txtNum_PreviewTextInput" Name="txtLeft" Grid.Column="1"/>
                          </Grid>
                          <Grid x:Name="grdPropTop">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Top" VerticalAlignment="Center"/>
                            <TextBox Keyboard.KeyUp="txtTop_KeyUp" LostFocus="txtTop_LostFocus"
                                     PreviewTextInput="txtNum_PreviewTextInput" Name="txtTop" Grid.Column="1"/>
                          </Grid>
                          <Grid x:Name="grdPropWidth">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Width" VerticalAlignment="Center"/>
                            <TextBox Keyboard.KeyUp="txtWidth_KeyUp" LostFocus="txtWidth_LostFocus"
                                     PreviewTextInput="txtNum_PreviewTextInput" Name="txtWidth" Grid.Column="1"/>
                          </Grid>
                          <Grid x:Name="grdPropHeight">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Height" VerticalAlignment="Center"/>
                            <TextBox Keyboard.KeyUp="txtHeight_KeyUp" LostFocus="txtHeight_LostFocus"
                                     PreviewTextInput="txtNum_PreviewTextInput" Name="txtHeight" Grid.Column="1"/>
                          </Grid>
                          <Grid x:Name="grdPropText" Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                              <RowDefinition/>
                              <RowDefinition/>
                              <RowDefinition Height="30"/>
                              <RowDefinition/>
                              <RowDefinition/>
                              <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Text" VerticalAlignment="Center"/>
                            <TextBox Keyboard.KeyUp="txtText_KeyUp" LostFocus="txtText_LostFocus" Name="txtText" Grid.Column="1"/>
                            <TextBlock Grid.Row="1" Text="Font Size" VerticalAlignment="Center"/>
                            <TextBox Keyboard.KeyUp="txtFontSize_KeyUp" LostFocus="txtFontSize_LostFocus"
                                     PreviewTextInput="txtNum_PreviewTextInput" Name="txtFontSize" Grid.Row="1" Grid.Column="1"/>
                            <TextBlock Grid.Row="2" Text="Font" VerticalAlignment="Center"/>
                            <ComboBox SelectionChanged="FontChooser_SelectionChanged" x:Name="FontChooser" Grid.Row="2" Grid.Column="1"
                                      Background="Transparent" SelectedValuePath="Source" IsEditable="true" MaxDropDownHeight="200"
                                      ItemsSource="{Binding Source={StaticResource myFonts}}"
                                      SelectedValue="{Binding Path=Default.FontFamily}">
                              <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                  <StackPanel Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                              </ItemsControl.ItemsPanel>
                              <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                  <TextBlock Height="20" Text="{Binding}" FontFamily="{Binding}"/>
                                </DataTemplate>
                              </ItemsControl.ItemTemplate>
                            </ComboBox>
                            <TextBlock Grid.Row="3" Text="Font Style" VerticalAlignment="Center"/>
                            <CheckBox Checked="chkItalic_Checked" Unchecked="chkItalic_Unchecked" Name="chkItalic" Grid.Row="3"
                                      Grid.Column="1" Content="Italic" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="4" Text="Font Weight" VerticalAlignment="Center"/>
                            <CheckBox Checked="chkBold_Checked" Unchecked="chkBold_Unchecked" Name="chkBold" Grid.Row="4" Grid.Column="1"
                                      Content="Bold" VerticalAlignment="Center"/>
                          </Grid>
                          <Grid x:Name="grdPropForeground">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Foreground" VerticalAlignment="Center"/>
                            <wpfx:ColorPicker x:Name="ForeColorChooser" Grid.Column="1" DisplayColorAndName="true" ShowRecentColors="false"
                                         ShowTabHeaders="false"/>
                          </Grid>
                          <Grid x:Name="grdPropBorder">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                              <RowDefinition/>
                              <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Border" VerticalAlignment="Center"/>
                            <wpfx:ColorPicker x:Name="BorderColorChooser" Grid.Column="1" DisplayColorAndName="true" ShowRecentColors="false"
                                         ShowTabHeaders="false"/>
                          </Grid>
                          <Grid x:Name="grdPropBack">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Background" VerticalAlignment="Center"/>
                            <wpfx:ColorPicker x:Name="BackColorChooser" Grid.Column="1" DisplayColorAndName="true" ShowRecentColors="false"
                                         ShowTabHeaders="false"/>
                          </Grid>
                          <Grid x:Name="grdPropRadiusX">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Radius X" VerticalAlignment="Center"/>
                            <TextBox Keyboard.KeyUp="txtRadiusX_KeyUp" LostFocus="txtRadiusX_LostFocus"
                                     PreviewTextInput="txtNum_PreviewTextInput" Name="txtRadiusX" Grid.Column="1"/>
                          </Grid>
                          <Grid x:Name="grdPropRadiusY">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Radius Y" VerticalAlignment="Center"/>
                            <TextBox Keyboard.KeyUp="txtRadiusY_KeyUp" LostFocus="txtRadiusY_LostFocus"
                                     PreviewTextInput="txtNum_PreviewTextInput" Name="txtRadiusY" Grid.Column="1"/>
                          </Grid>
                          <Grid x:Name="grdPropStrokeThick">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Stroke Thick" VerticalAlignment="Center"/>
                            <TextBox Keyboard.KeyUp="txtStrokeThick_KeyUp" LostFocus="txtStrokeThick_LostFocus"
                                     PreviewTextInput="txtNum_PreviewTextInput" Name="txtStrokeThick" Grid.Column="1"/>
                          </Grid>
                          <Grid x:Name="grdPropStroke">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Stroke" VerticalAlignment="Center"/>
                            <wpfx:ColorPicker x:Name="StrokeColorChooser" Grid.Column="1" DisplayColorAndName="true" ShowRecentColors="false"
                                         ShowTabHeaders="false"/>
                          </Grid>
                          <Grid x:Name="grdPropFill">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Fill" VerticalAlignment="Center"/>
                            <wpfx:ColorPicker x:Name="FillColorChooser" Grid.Column="1" DisplayColorAndName="true" ShowRecentColors="false"
                                         ShowTabHeaders="false"/>
                          </Grid>
                          <Grid x:Name="grdPropGrad1">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Gradient Color 1" VerticalAlignment="Center"/>
                            <wpfx:ColorPicker x:Name="Grad1ColorChooser" Grid.Column="1" DisplayColorAndName="true" ShowRecentColors="false"
                                         ShowTabHeaders="false"/>
                          </Grid>
                          <Grid x:Name="grdPropGrad2">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Gradient Color 2" VerticalAlignment="Center"/>
                            <wpfx:ColorPicker x:Name="Grad2ColorChooser" Grid.Column="1" DisplayColorAndName="true" ShowRecentColors="false"
                                         ShowTabHeaders="false"/>
                          </Grid>
                          <Grid x:Name="grdPropImage">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition/>
                              <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Image" VerticalAlignment="Center" Margin="0,0,0,9"/>
                            <Border x:Name="b" Grid.Column="1"/>
                            <TextBox Name="txtImage" Grid.Column="1" MaxWidth="{Binding ActualWidth, ElementName=b}"/>
                            <Button Click="btnBrowseImage_Click" Name="btnBrowseImage" Grid.Column="2" Background="Transparent"
                                    BorderThickness="0" Padding="0" Margin="0">
                              <TextBlock Text="..." Foreground="Gray"/>
                            </Button>
                          </Grid>
                          <Grid x:Name="grdPropKind">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="100"/>
                              <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Kind" VerticalAlignment="Center"/>
                            <TextBox Keyboard.KeyUp="txtKind_KeyUp" LostFocus="txtKind_LostFocus" Name="txtKind" Grid.Column="1"/>
                          </Grid>
                          <Grid x:Name="grdPropGauge" Visibility="Collapsed">
                            <Grid>
                              <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                              </Grid.RowDefinitions>
                              <Grid>
                                <Grid.ColumnDefinitions>
                                  <ColumnDefinition Width="100"/>
                                  <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                  <RowDefinition/>
                                  <RowDefinition/>
                                  <RowDefinition/>
                                  <RowDefinition/>
                                  <RowDefinition/>
                                  <RowDefinition/>
                                  <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Value" VerticalAlignment="Center"/>
                                <TextBox Keyboard.KeyUp="txtValue_KeyUp" LostFocus="txtValue_LostFocus"
                                         PreviewTextInput="txtNum_PreviewTextInput" Name="txtValue" Grid.Column="1"/>
                                <TextBlock Grid.Row="1" Text="From Value" VerticalAlignment="Center"/>
                                <TextBox Keyboard.KeyUp="txtFromValue_KeyUp" LostFocus="txtFromValue_LostFocus"
                                         PreviewTextInput="txtNum_PreviewTextInput" Name="txtFromValue" Grid.Row="1" Grid.Column="1"/>
                                <TextBlock Grid.Row="2" Text="To Value" VerticalAlignment="Center"/>
                                <TextBox Keyboard.KeyUp="txtToValue_KeyUp" LostFocus="txtToValue_LostFocus"
                                         PreviewTextInput="txtNum_PreviewTextInput" Name="txtToValue" Grid.Row="2" Grid.Column="1"/>
                                <TextBlock Grid.Row="3" Text="Needle Fill" VerticalAlignment="Center"/>
                                <wpfx:ColorPicker x:Name="NeedleColorChooser" Grid.Row="3" Grid.Column="1" DisplayColorAndName="true"
                                             ShowRecentColors="false" ShowTabHeaders="false"/>
                                <TextBlock Grid.Row="4" Text="Ticks Color" VerticalAlignment="Center"/>
                                <wpfx:ColorPicker x:Name="TicksColorChooser" Grid.Row="4" Grid.Column="1" DisplayColorAndName="true"
                                             ShowRecentColors="false" ShowTabHeaders="false"/>
                                <TextBlock Grid.Row="5" Text="Section Radius" VerticalAlignment="Center"/>
                                <TextBox Keyboard.KeyUp="txtSectionRadius_KeyUp" LostFocus="txtSectionRadius_LostFocus"
                                         TextChanged="txtSectionRadius_TextChanged" Name="txtSectionRadius" Grid.Row="5" Grid.Column="1"/>
                              </Grid>
                              <Grid Row="1">
                                <StackPanel Orientation="Vertical">
                                  <TextBlock Text="Sections:" Margin="0 5 0 0"/>
                                  <DataGrid Name="dgSectionGauge" AutoGenerateColumns="false" CanUserAddRows="false" SelectionMode="Single"
                                            ItemsSource="{Binding GaugeSection}">
                                    <DataGrid.Columns>
                                      <DataGridTextColumn Header="From" IsReadOnly="true" Binding="{Binding Path=FromValue}"/>
                                      <DataGridTextColumn Header="To" IsReadOnly="true" Binding="{Binding Path=ToValue}"/>
                                      <DataGridTextColumn Header="Fill" IsReadOnly="true" Binding="{Binding Path=Fill}"/>
                                    </DataGrid.Columns>
                                  </DataGrid>
                                  <Grid HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                      <ColumnDefinition/>
                                      <ColumnDefinition/>
                                      <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Button Click="btnAddSectionGauge_Click" Name="btnAddSectionGauge" Background="Transparent"
                                            Foreground="LightGray" BorderThickness="0 0 0 0.6">
                                      <md:PackIcon Kind="Plus"/>
                                    </Button>
                                    <Button Click="btnEditSection_Click" Name="btnEditSection" Grid.Column="1" Background="Transparent"
                                            Foreground="LightGray" BorderThickness="0 0 0 0.6">
                                      <md:PackIcon Kind="Pencil"/>
                                    </Button>
                                    <Button Click="btnDeleteSection_Click" Name="btnDeleteSection" Grid.Column="2" Background="Transparent"
                                            Foreground="LightGray" BorderThickness="0 0 0 0.6">
                                      <md:PackIcon Kind="Minus"/>
                                    </Button>
                                  </Grid>
                                  <Grid x:Name="grdAddSection" Visibility="Collapsed">
                                    <Grid.ColumnDefinitions>
                                      <ColumnDefinition Width="100"/>
                                      <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                      <RowDefinition/>
                                      <RowDefinition/>
                                      <RowDefinition/>
                                      <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="From Value" VerticalAlignment="Center"/>
                                    <TextBox PreviewTextInput="txtNum_PreviewTextInput" Name="txtFromSection" Grid.Column="1"/>
                                    <TextBlock Grid.Row="1" Text="To Value" VerticalAlignment="Center"/>
                                    <TextBox PreviewTextInput="txtNum_PreviewTextInput" Name="txtToSection" Grid.Row="1" Grid.Column="1"/>
                                    <TextBlock Grid.Row="2" Text="Fill" VerticalAlignment="Center"/>
                                    <wpfx:ColorPicker x:Name="SectionColorChooser" Grid.Row="2" Grid.Column="1" DisplayColorAndName="true"
                                                 ShowRecentColors="false" ShowTabHeaders="false"/>
                                    <Grid Row="3" ColumnSpan="2" HorizontalAlignment="Stretch">
                                      <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                      </Grid.ColumnDefinitions>
                                      <Button Click="btnAddSectionOk_Click" Name="btnAddSectionOk" Background="Transparent" Foreground="DimGray"
                                              BorderThickness="0 0 0 0.6">
                                        <md:PackIcon Kind="Check"/>
                                      </Button>
                                      <Button Click="btnAddSectionCancel_Click" Name="btnAddSectionCancel" Grid.Column="1"
                                              Background="Transparent" Foreground="DimGray" BorderThickness="0 0 0 0.6">
                                        <md:PackIcon Kind="Close"/>
                                      </Button>
                                    </Grid>
                                  </Grid>
                                </StackPanel>
                              </Grid>
                            </Grid>
                          </Grid>
                          <Grid x:Name="grdPropPie" Visibility="Visible">
                            <StackPanel Orientation="Vertical">
                              <TextBlock Text="Series:" Margin="0 5 0 0"/>
                              <DataGrid Name="dgSeries" AutoGenerateColumns="false" CanUserAddRows="false" SelectionMode="Single"
                                        ItemsSource="{Binding DataSerie}">
                                <DataGrid.Columns>
                                  <DataGridTextColumn Header="Title" IsReadOnly="true" Binding="{Binding Path=Title}"/>
                                  <DataGridTextColumn Header="Fill" IsReadOnly="true" Binding="{Binding Path=Fill}"/>
                                  <DataGridTextColumn Header="Values" IsReadOnly="true" Binding="{Binding Path=Values}"/>
                                </DataGrid.Columns>
                              </DataGrid>
                              <Grid HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                  <ColumnDefinition/>
                                  <ColumnDefinition/>
                                  <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button Click="btnAddSerie_Click" Name="btnAddSerie" Background="Transparent" Foreground="Gray"
